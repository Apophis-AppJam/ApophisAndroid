<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.secondDay.SecondDayChatEndingActivity"
    android:background="@drawable/img_end_bg">

    <ImageView
        android:id="@+id/img_ending_moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_moon" />

    <TextView
        android:id="@+id/tv_firstday_ending_message_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="@string/first_ending_message1"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/gmarket_sans_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ending_moon" />

    <TextView
        android:id="@+id/tv_firstday_ending_message_content2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/gmarket_sans_medium"
        android:text="나침반이 키리키는 곳 : \n여정의 시작"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstday_ending_message_content1" />

    <View
        android:id="@+id/view_firstday_ending_message_background"
        android:layout_width="295dp"
        android:layout_height="176dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_rectangle_black26_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstday_ending_message_content2" />

    <TextView
        android:id="@+id/tv_firstday_ending_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="아포니머스가 남긴 메세지"
        android:textSize="12dp"
        android:fontFamily="@font/gmarket_sans_medium"
        android:textColor="@color/purpleAB70F5"
        app:layout_constraintEnd_toEndOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintStart_toStartOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintTop_toTopOf="@+id/view_firstday_ending_message_background" />

    <View
        android:id="@+id/view_firstday_ending_line"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/gray70"
        app:layout_constraintEnd_toEndOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintStart_toStartOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstday_ending_message_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintEnd_toEndOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/view_firstday_ending_message_background"
        app:layout_constraintTop_toBottomOf="@+id/view_firstday_ending_line">

        <TextView
            android:id="@+id/tv_firstday_ending_message_content3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/gmarket_sans_medium"
            android:lineSpacingExtra="4dp"
            android:text="어쩌면 그 '한 번쯤'은 없을지도 모른다고."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/img_firstday_quote_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_quote_left" />

        <ImageView
            android:id="@+id/img_firstday_quote_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_quote_right" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/btn_firstday_back_main"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/round_rectangle_purpleab_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_back_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방으로 돌아가기"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/gmarket_sans_medium"
        app:layout_constraintBottom_toBottomOf="@+id/btn_firstday_back_main"
        app:layout_constraintEnd_toEndOf="@+id/btn_firstday_back_main"
        app:layout_constraintStart_toStartOf="@+id/btn_firstday_back_main"
        app:layout_constraintTop_toTopOf="@+id/btn_firstday_back_main" />

</androidx.constraintlayout.widget.ConstraintLayout>